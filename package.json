{
  "name": "@resugar/resugar",
  "private": true,
  "description": "Update your project to the latest ECMAScript syntax.",
  "keywords": [
    "ast",
    "es6",
    "es7"
  ],
  "bugs": "https://github.com/resugar/resugar/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/resugar/resugar.git"
  },
  "license": "MIT",
  "author": "Brian Donovan",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "eslint 'packages/**/*.ts' 'script/**/*.ts' 'script/run' jest.config.js",
    "prepare": "lerna run prepare",
    "pretest": "yarn lint",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,json}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/parser": "^7.3.3",
    "@babel/traverse": "^7.2.3",
    "@babel/types": "^7.7.2",
    "@types/babel__core": "^7.0.5",
    "@types/babel__traverse": "^7.0.6",
    "@types/jest": "^25.1.0",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.1.0",
    "@types/shebang-regex": "^3.0.0",
    "@types/strip-indent": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^3.0.5",
    "jest": "^24.1.0",
    "lerna": "^3.13.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.1",
    "recast": "^0.18.5",
    "sort-package-json": "^1.22.1",
    "source-map-support": "^0.5.13",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.3"
  },
  "resolutions": {
    "**/@babel/types": "7.7.2",
    "**/@types/node": "12.7.5"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
